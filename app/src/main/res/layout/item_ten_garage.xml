<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_detail"
    android:background="#ffffff"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

        <LinearLayout
            android:layout_margin="@dimen/magin_default"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgAvatar"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:background="@mipmap/ic_launcher" >

            </ImageView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/magin_default"
                android:layout_marginRight="@dimen/magin_default"
                android:layout_marginBottom="5dp"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/layout_header"
                    android:padding="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/txt_nameOfGarage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/black"
                        android:textStyle="bold"
                        android:text="Garage otô Vĩnh Tín"
                        android:textSize="@dimen/txt_normal"
                        android:layout_alignParentLeft="true"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@+id/layout_distance"
                        android:layout_marginRight="5dp" />

                    <LinearLayout
                        android:id="@+id/layout_distance"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/border_item_gara_on_map"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/txt_distance"
                            android:padding="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@android:color/black"
                            android:maxLines="1"
                            android:text="30 km/h"
                            android:textSize="@dimen/txt_normal" />
                    </LinearLayout>
                </RelativeLayout>

                <RatingBar
                    android:id="@+id/rate_garage"
                    android:isIndicator="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:numStars="5"
                    android:progressDrawable="@drawable/ratingbar"
                    android:rating="0" />

                <TextView
                    android:id="@+id/txt_addressOfGarage"
                    android:text="Hello android fffffffffffffffffffffffffffffffffffffffffffffffffffff"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/txt_normal"
                    android:textStyle="normal" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_marginLeft="@dimen/magin_default"
            android:layout_marginRight="@dimen/magin_default"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp"
            android:weightSum="2">

            <Button
                android:id="@+id/btn_direct"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/direct"
                android:textColor="@android:color/white"
                android:background="#999999"
                android:textAllCaps="false"
                android:layout_marginRight="5dp"
                android:textSize="@dimen/txt_tittle" />

            <Button
                android:id="@+id/btn_contact"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="#007c89"
                android:layout_weight="1"
                android:text="@string/contact"
                android:layout_marginLeft="5dp"
                android:textColor="@android:color/white"
                android:textAllCaps="false"
                android:textSize="@dimen/txt_tittle" />
        </LinearLayout>

</LinearLayout>
