<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="DottedProgressBar">
        <attr name="emptyDotsColor" format="color" />
        <attr name="activeDotColor" format="color" />
        <attr name="inactiveDot" format="reference|color" />
        <attr name="activeDot" format="reference|color" />
        <attr name="dotSize" format="dimension" />
        <attr name="spacing" format="dimension" />
        <attr name="jumpingSpeed" format="integer" />
        <attr name="activeDotIndex" format="integer" />
    </declare-styleable>
    <attr name="cropImageStyle" format="reference" />

    <declare-styleable name="CropImageView">
        <attr name="highlightColor" format="reference|color" />
        <attr name="showThirds" format="boolean" />
        <attr name="showCircle" format="boolean" />
        <attr name="showHandles">
            <enum name="changing" value="0" />
            <enum name="always" value="1" />
            <enum name="never" value="2" />
        </attr>
    </declare-styleable>
</resources>